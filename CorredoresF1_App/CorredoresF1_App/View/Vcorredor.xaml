<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorredoresF1_App.View.Vcorredor">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Tomato" Padding="24" CornerRadius="0">
                <Label Text="Formula 3" HorizontalTextAlignment="Center" TextColor="AliceBlue"></Label>
            </Frame>
            <Label Text="Registrar Corredores" FontSize="Title" Padding="30,10,30,10"> </Label>
            <Entry Placeholder="Nombre de corredor" Text="{Binding Nombre}"></Entry>
            <Entry Placeholder="Numero de corredor" Text="{Binding Numero}"></Entry>
            <Entry Placeholder="Equipo" Text="{Binding Equipo}"></Entry>
            <Button Text="Registrar" Command="{Binding InsertarCorredor}"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>